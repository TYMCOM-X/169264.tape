procedure printEntry( integer r );
begin "print entry"

	print(  Crlf,		! all entries START, blank line ;
		O:Oper[ r ],
		";", TymDay( O:E!Date[ r ] ),
		";", O:E!Who[ r ], Crlf );

	print(  O:Employee[ r ],
		";", O:District[ r ],
		";", O:Manager[ r ], Crlf );

	print(  O:Name[ r ] , crlf );
	print(  O:Phone[ r ], crlf );
	print(  O:User[ r ] , crlf );
	print(  O:Mail[ r ] , crlf );

	print(  TymDay( O:C!Date[ r ] ),
		";", O:C!Who[ r ], Crlf );

	print(  cvOS( O:Password[ r ] ),
		";", TymDay( O:P!Date[ r ] ),
		";", O:P!Who[ r ], Crlf );

	if ( O:License[ r ] )
	 then print( "L;",
			lpad( cvOS( !lh( O:License[r] ) ), 6 ),
			lpad( cvOS( !rh( O:License[r] ) ), 7 ),
			Crlf );

	if ( R!t_ O:Gift[ r ] )
	 then while ( R!t )
	       do R!t_ PrintGrant( R!t, "R" );

	if ( G!t_ O:Grant[ r ] )
	 then while ( G!t )
	       do G!t_ PrintGrant( G!t, "G" );

	if ( C!t_ O:Remark[ r ] )
	 then while ( C!t_ C:Nxt[ C!t ] )
	       do print( C:Line[ C!t ], Crlf );

end "print entry";


